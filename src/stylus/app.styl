body
  font 14px 'Helvetica Neue', Helvetica, Arial, sans-serif
  background #f5f5f5
  min-width 230px
  // max-width 700px
  margin 0 auto
  padding 0 0 30px

.btn
  display block
  width 100%
  height 62px

.map
  width 100%
  height 500px

.input-field

  .delete
    position absolute
    right 0
    top 12px
    cursor pointer

.preloader
  display none
  position fixed
  z-index 10000
  top 0
  left 0
  right 0
  bottom 0

  &.active
    display block

  .preloader-wrapper
    position absolute
    top 50%
    margin-top -32px
    left 50%
    margin-left -32px

.toast
  color #fff
